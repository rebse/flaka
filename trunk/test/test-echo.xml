	<!-- Test Comments -->
	<!-- A comment line starts with a certain character and eats up -->
	<!-- the whole line. Cont lines are not supported though. -->

	<target name="test-comment-01">
		<myecho>;</myecho>
		<c:expect pname="p" value="" />
		<myecho>;&#xA;</myecho>
		<c:expect pname="p" value="" />
		<myecho>&#xA;;&#xA;</myecho>
		<c:expect pname="p" value="" />
	</target>

	<target name="test-comment-02">
