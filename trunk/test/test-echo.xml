		<c:expect pname="p" value="" />
		<myecho>;&#xA;</myecho>
		<c:expect pname="p" value="" />
		<myecho>&#xA;;&#xA;</myecho>
		<c:expect pname="p" value="" />
	</target>

	<target name="test-comment-03">
		<myecho>;&#xA;a</myecho>
		<c:expect pname="p" value="a" />
		<myecho>&#xA;;&#xA;b</myecho>
		<c:expect pname="p" value="b" />
	</target>

