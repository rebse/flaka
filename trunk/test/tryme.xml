<project xmlns:c="antlib:net.haefelingerit.flaka">


  <macrodef name="dependency">
    <attribute name="alias" default="" />
    <element name="groupId" />
    <element name="artifactId" />
    <element name="version" />
    <sequential />
  </macrodef>

  <c:dependency>
    <groupId>junit</groupId>
    <artifactId>junit</artifactId>
    <version>3.8.1</version>
  </c:dependency>

  <dependency alias="log4j">
    <groupId>log4j</groupId>
    <artifactId>log4j</artifactId>
    <version>2.8.9</version>
  </dependency>

  <mkdir dir="tmp" />

  <c:scndeps var="dlist">
    <include name="tryme.xml" />
  </c:scndeps>

	<!-- install handler able to resolve #{..} -->
	<c:install-reference-handler />
	
  <property name="foo" value="bar" />
	<c:set>
	 foo = 'bar'
	</c:set>
  <echo>
  	property foo => ${foo}
  	variable foo => #{foo}
  	
  	ant.file    => ${ant.file}
  </echo>
	
</project>