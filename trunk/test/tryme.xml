<project xmlns:c="antlib:net.haefelingerit.flaka">
  <property name="cvstag.ver" value="${x}" />
	<property name="project.cvstag" value="2.0" />
	<property name="cvstag.ver" value="1.0" />
	
	<c:set>
		project.version = property[ 'cvstag.ver' ]
		project.version = property[ 'project.cvstag' ]
		project.version = 'SNAPSHOT'
	</c:set>
	
  <c:choose>
     <c:when test=" has.property['cvstag.ver'] ">
       <c:properties>
         project.version = ${cvstag.ver}
       </c:properties>
     </c:when>
     <c:when test=" has.property['project.cvstag']">
       <c:properties>
         project.version = ${project.cvstag}
       </c:properties>
     </c:when>
     <c:otherwise>
       <c:properties>
         project.version = SNAPSHOT
       </c:properties>
     </c:otherwise>
   </c:choose>

	 <c:echo>
	 	 project.version = ${project.version}
	 </c:echo>
</project>