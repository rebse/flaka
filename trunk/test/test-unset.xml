<project xmlns:c="antlib:it.haefelinger.flaka">
  <c:properties>
    ;; comment \
    cont \\
    p0x1 = p0x1
  </c:properties>
  <property name="p0x2" value="p0x2" />
  <c:let>
    p0x3 := 'p0x3'
    p0x4 ::= #{'p0x4'}
   </c:let>
  <fail unless="p0x1" message="[1]"/>
  <fail unless="p0x2" message="[2]" />
  <fail unless="p0x3" message="[3]" />
  <fail if="p0x4" />
  <c:unset>
    ;; comment
    #{'p0x1'}
    p0x2
    ;; comment \
    continued
    p0x3
    ;; not \
    continued \\
    p0x4
  </c:unset>
  <fail if="p0x1" message="[3]" />
  <fail if="p0x2" message="[4]" />
  <fail if="p0x3" message="[5]" />
  <fail if="p0x4" message="[6]" />
</project>