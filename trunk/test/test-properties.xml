<project xmlns:c="antlib:net.haefelingerit.flaka">
  <c:let>
    foo = 'foo'
  </c:let>
  <c:properties>
    ; this is \
    a comment
    bar = bar
    foobar = \
    #{foo.toupper}${bar}
  </c:properties>

  <echo>foobar = ${foobar}</echo>
  <c:when test="not (property.foobar == 'FOObar')">
    <c:fail message="unexpected value for property foobar: #{property.foobar}" />
  </c:when>

</project>